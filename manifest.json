{
  "manifest_version": 3,
  "name": "Beezy Monitor",
  "version": "0.0.1",
  "description": "Beezy Monitor is a DevTools-friendly dashboard that turns noisy DevTools signals into simple graphs and readable summaries for developers and developer-managers.",
  "author": "nathabee",
  "homepage_url": "https://nathabee.github.io/beezy-monitor/",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools/devtools.html",
  "action": {
    "default_title": "Beezy Monitor"
  }
}
